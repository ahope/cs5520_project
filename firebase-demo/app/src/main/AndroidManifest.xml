<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.neu.madcourse.lecture6.firebasedemo">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Module 6 Demos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".fcm.FCMActivity" />
        <activity android:name=".realtimedatabase.RealtimeDatabaseActivity" />
        <activity
            android:name=".ShowPermActivity"
            android:label="Permissions in Android" />
        <activity
            android:name=".SendNotificationActivity"
            android:label="Notification Example" />
        <activity
            android:name=".ReceiveNotificationActivity"
            android:label="Receive Notification" />
        <activity
            android:name=".FakeCallActivity"
            android:label="Fake Call Activity" />

        <service
            android:name=".fcm.DemoMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name=".spotify.MySpotifyReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.spotify.music.playbackstatechanged" />
                <action android:name="com.spotify.music.metadatachanged" />
                <action android:name="com.spotify.music.queuechanged" />
            </intent-filter>
        </receiver>
    </application>

</manifest>